<html>
	<head>
    <!-- CSS -->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <!-- JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="/js/style.js"></script>
    <!-- Template: https://www.w3schools.com/w3css/tryw3css_templates_interior_design.htm -->
	</head>
	<body>

    <!-- Sidebar/menu -->
    
    <nav class="w3-sidebar w3-red w3-collapse w3-top w3-large w3-padding" style="z-index:3;width:300px;font-weight:bold;"
      id="mySidebar"><br>
      <a href="javascript:void(0)" onclick="w3_close()" class="w3-button w3-hide-large w3-display-topleft" style="width:100%;font-size:22px">Close
        Menu</a>
      <div class="w3-container">
        <h3 class="w3-padding-64"><b>Fake News<br>Database</b></h3>
      </div>
      <div class="w3-bar-block">
        <a href="/" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Home</a>
        <a href="/fakenews/insert_form" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Insert fake news</a>
        <a href="/fakenews/list" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Show fake news</a>
        <a href="/file/insert_form" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Insert file</a>
        <a href="/file/list" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Show files</a>
        <!--<a href="/user/insert_form" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Create user</a>
        <a href="/user/list" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Show users</a> -->
        <a href="/penalty/insert_form" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Insert penalties</a>
        <a href="/penalty/list" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Show penalties</a>
      </div>
    </nav>
    
    <div class="w3-main" style="margin-left:340px;margin-right:40px">
      <div class="w3-row-padding">
        <form class="fileupload" action="upload" method="post" enctype="multipart/form-data">
          <h1 class="w3-jumbo">Fake news</h1>
          <div class="w3-half">

            <!-- fake news title -->
            <h1> Title : </h1><input type="text" name="title"><br>

            <!-- fake news content -->
            <h1> Content : </h1><input type="text" name="content"><br>
            
            <!-- company that published fake news -->
            <h1> Company Name : </h1>
            
            <select class="selectpicker" name = "company" >
              <% for(var i = 0; i < data.all_company.length; i++) {%>
                  <option value="<%=data.all_company[i][0]%>"><%=data.all_company[i][1]%></option>
              <%}%>
            </select><br><br>

            <!-- gorvenment power -->
            <h1> Government Power : </h1>

            <select class="selectpicker" name = "government_power" >
            <% for(var i = 0; i < data.all_government_power.length; i++) {%>
              <option value="<%=data.all_government_power[i][0]%>"><%=data.all_government_power[i][1]%></option>
            <%}%>
            </select><br><br>

               <h1> Propagation method : </h1>

              <select class="selectpicker" name = "propagation_method" multiple >
              <% for(var i = 0; i < data.all_propagation_method.length; i++) {%>
                <option value="<%=data.all_propagation_method[i][0]%>"><%=data.all_propagation_method[i][1]%></option>
              <%}%>
              </select><br><br>

          </div> <!-- Ending half -->

          <div class="w3-half">

          
            <!-- parties envolved -->
            <h1> Parties envolved : </h1>

            <select class="selectpicker" name = "parties" multiple >
            <% for(var i = 0; i < data.all_parties.length; i++) {%>
              <option value="<%=data.all_parties[i][0]%>"><%=data.all_parties[i][1]%></option>
            <%}%>
            </select><br><br>

            <!-- fake news type -->
            <h1> Fake news type : </h1>

            <select class="selectpicker" name = "fake_news_type" >
            <% for(var i = 0; i < data.all_fake_news_type.length; i++) {%>
              <option value="<%=data.all_fake_news_type[i][0]%>"><%=data.all_fake_news_type[i][1]%></option>
            <%}%>
            </select><br><br>

            <!-- gorvenment power -->
            <h1> Intention : </h1>
            <select class="selectpicker" name = "fake_news_intention" >
              <option value = "true">A favor</option>
              <option value = "false">Contra</option>
            </select><br><br>

          </div> <!-- Ending half -->
          

           
        
          
          <!-- submit button  -->
          <input type="submit"/>
        
        </form>

        <h1><a href="/fakenews/list">News List</a></h1>
    
      </div>
    </div>
</html>