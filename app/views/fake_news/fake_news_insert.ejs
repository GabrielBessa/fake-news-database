        <% for(var i = 0; i < data['government_power'].length; i++) {%>

        <h3>
          <%=data['government_power'][i]%>
        </h3><input type="radio" name="government_power" value="<%=data['government_power'][i]%>"><br><br>

        <%}%>

        <!-- parties envolved -->
        <div class="field">
          <h1> <label>Parties envolved :</label> </h1>
          <!-- <select class="ui search dropdown" name="parties_envolved">
              <option value="">Select Party</option>
