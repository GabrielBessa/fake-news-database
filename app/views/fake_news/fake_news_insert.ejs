  <div class="w3-main w3-center" style="margin-left:340px;margin-right:40px">
    <div class="w3-row-padding">
      <form class="ui form fileupload" action="upload/fake_news" method="post" enctype="multipart/form-data">
        <h1 class="w3-jumbo">Fake news</h1>

        <!-- fake news title -->
        <div class="field">
          <h1><label>Title :</label></h1>
          <input type="text" name="title"><br>
        </div>

        <!-- fake news content -->
        <div class="field">
          <h1><label>Content :</label></h1>
          <input type="text" name="content"><br>
        </div>
        <!-- <h1> Content : </h1><input type="text" name="content"><br> -->

        <!-- company that published fake news -->
        <div class="field">
          <h1> <label>Company Name :</label> </h1>
