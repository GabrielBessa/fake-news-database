                          <option value="<%=data['parties'][i]%>"><%=data['parties'][i]%></option>
              <%}%>
            </select> -->
        </div>

        <% for(var i = 0; i < data['parties'].length; i++) {%>

        <h3>
          <%=data['parties'][i]%>
        </h3><input type="checkbox" name="parties" value="<%=data['parties'][i]%>"><br><br>

