  <div class="w3-main" style="margin-left:340px;margin-right:40px">
    <h1 class="w3-jumbo">Insert a penalty</h1>
    

        <form class="fileupload" action="upload" method="post" enctype="multipart/form-data">
          <div class="w3-half">
        
        
            <!-- fake news content -->
            <h1> Amount : </h1><input type="number" name="amount"><br>
        
            <!-- company that published fake news -->
            <h1> Company Name : </h1><br>
        
            <select name="company" id = "company" onchange="filter_news();">
              <% for(var i = 0; i < data.all_company.length; i++) {%>
              <option value="<%=data.all_company[i][0]%>">
                <%=data.all_company[i][1]%>
              </option>
              <%}%>
            </select>

            <!-- penalty type of the fake news -->
            <h1> Penalty Type Name : </h1><br>

            <select name="penalty_type">
              <% for(var i = 0; i < data.all_penalty_type.length; i++) {%>
              <option value="<%=data.all_penalty_type[i][0]%>">
                <%=data.all_penalty_type[i][1]%>

              </option>
              <%}%>
            </select>

            
            <!-- fake news -->
            <h1> Fake News Title: </h1><br>

            <select name="fake_news" id = "fake_news">
              <% for(var i = 0; i < data.all_fake_news.length; i++) {%>
              <option value="<%=data.all_fake_news[i][0]%>" id = "<%=data.all_fake_news[i][2]%>">
                <%=data.all_fake_news[i][1]%>
              </option>
              <%}%>
            </select><br><br>

        
          
          <!-- submit button  -->
          <input type="submit" />
        
        </form>

  </div>
  

  <script type="text/javascript">
    function filter_news(){
        var id = document.getElementById('company').value;
        var news = document.getElementById('fake_news');
        var ok = false;
        for(var i = 0; i < news.length; i++){
          if(id == news[i].id){
            news[i].style.display = "block";
            if(!ok){
              news.selectedIndex = i;
              ok = true;
            }
          }
          else
            news[i].style.display = "none"; 
        }
    }
  </script>

  </body>

